rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /recipes/{recipeId} {
      allow read: if true;
      allow write: if true; // Allow public write access for demo/dev purposes
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow write: if true; // Allow public write access for demo/dev purposes
    }

    match /events/{eventId}/meals/{mealId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
